<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.UploadActivity">


    <TextView
        android:id="@+id/postTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post spare part"
        android:textSize="35sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/chooseF"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="choose a file"
        android:background = "@drawable/round_button"
        android:textSize="20sp"
        android:layout_below="@id/postTxt"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"/>


    <ImageView
        android:id="@+id/sparePartImg"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_below="@+id/postTxt"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/uploadImg"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="upload"
        android:background = "@drawable/round_button"
        android:textSize="20sp"
        android:layout_below="@id/sparePartImg"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"/>


    <EditText
        android:id="@+id/compName"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uploadImg"
        android:hint="company name"/>

    <EditText
        android:id="@+id/price"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/compName"
        android:hint="price"/>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price"
        android:hint="phone number"
        android:inputType="phone"/>

    <Button
        android:id="@+id/postbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:text="Post"
        android:background = "@drawable/round_button"
        android:textSize="20sp"
        android:layout_below="@id/phoneNumber"
        android:textColor="#ffffff"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>